<h1>Listing inventories</h1>

<div>
<%= link_to 'Start a new inventory process', new_inventory_path, :class=>"btn btn-large btn-primary" %>
</div>
<br />
<table class="table">
  <tr>
    <th>Name</th>
    <th>Notes</th>
    <th>Date Initiated?</th>
  </tr>

<% @inventories.each do |inventory| %>
  <tr>
    <td><%= link_to inventory.name,inventory %></td>
    <td><%= inventory.notes %></td>
    <td><%= inventory.created_at.to_formatted_s(:just_date) %></td>
  </tr>
<% end %>
</table>

<br />


