<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <%= render '/dashboard/search'  %>
    </div>
    <div class="col-md-9">
      <table class="table">
	<tr>
	  <th>Title</th>
	  <th>Author(s)</th>
	  <th># in stock</th>
	  <th># sold</th>
	  <th># on order</th>
	  <th>Blurbed?</th>
	  <th>Categorized?</th>
	</tr>
	<% @titles.each do |title| %>
	<tr class="<%= 'warning' if title.in_stock==0 && title.on_order==0 %>">
	  <td>
	    <%= link_to title.title,title, {:title => title.copies_info}%> 
	  </td>
	  <td>
	    <small><%= sanitize contributors_list(title)%></small>
	    <%= ordering_from_info(title) %>
	  </td>
	  <td><%= title.in_stock %></td>
	  <td><%= title.sold %></td>
	  <td>	    <% title.outstandingorderlines.each do |li| %>
	    <div>
	      <small>	      <%= li.still_outstanding %> <%= li.purchase_order.ordered? ? 'ordered' : 'pending' %> on <%= link_to li.purchase_order.number,li.purchase_order %> <%= li.purchase_order.ordered_when.to_formatted_s(:just_date) rescue "" %>		</small>
	    </div>
	    <% end %>
	  </td>
	  <td><%= blurb_status(title) %></td>
	  <td><small><%= sanitize category_status(title) %></small>	<small>
	 <%= 'ðŸ’°' * title.hundreds_of_dollars %>
	 <%= 'ðŸ”¥' * title.hotness %>
	  
	</small>
	    <%= link_to raw('<i class="fa fa-check-circle-o"></i>'), hidden_actions_edition_path(title.latest_published_edition),  {:remote => true, 'data-toggle' =>  'modal', :role=>'button', 'data-target' => '#modal-window'} unless title.latest_published_edition.nil? %></td>
	</tr>
	<% end %>
      </table>
    <%= paginate @titles %>
    </div>
  </div>
</div>
