<div class="row">
  <div class="span8">
    <table class="table">
      <tr><th>Author</th><th>Titles</th><th></th></tr>
      <% @authors.each do |a| %>
      <tr>
	<td><%= link_to a.full_name, a %></td>
	<td><%= a.titles.length %></td>
	<td><%= mylinkbutton "Edit",edit_author_path(a),{},"btn-small" %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="span4">
    <%= mylinkbutton "<i class='fa fa-plus-circle'></i>  New Author",new_author_path %>
    <h1>Find authors</h1>
    <%= nested_form_for @author_search_object,:method => :get,:html=>{:class=>"form-horizontal form-compact"},:url => {:action => :search,:controller => :authors } do |f| %>
<%= mytextfield f,:name,:full_name %>

<%= mysubmit f, :search,{},"btn-medium" %>
<% end %>

    
  </div>
  
</div>
