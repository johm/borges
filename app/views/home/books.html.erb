<div class="span6">
  <h1 style="font-size:100px;margin-bottom:50px;margin-top:20px !important;">Books!</h1>
  <h2 style="float:left;margin-right:20px;">Find a book:</h2>
  <%= nested_form_for @title_search_object || SearchObject.new,:method => :get,:html=>{:class=>"form-horizontal form-compact"},:url => {:action => :index,:controller => :titles } do |f| %>
  <%= f.text_field :searchquery, :placeholder=>"Title,Author, or ISBN" %>
  <input class="btn btn-primary btn-medium" name="commit" type="submit" value="search" >
  <% end %>
  
</div>

<div class="span4">
  <h3>Your questions, answered:</h3>
  <ul class="bookfaq">
    <li><a href="">How do I order a book that's not listed as in stock?</a>
    <li><a href="">Can I buy books online from Red Emma's?</a>
    <li><a href="">Will you sell books for my class?</a>
    <li><a href="">Will you sell books at my event?</a>
    <li><a href="">Can I do an event for my book at Red Emma's?</a>
    <li><a href="">Are you hiring?</a>
  </ul>
</div>
</div>
<hr>
<div class="row" >
  <div class="span2"></div>
  <div class="span8">
    <% Category.find_by_name("main").title_lists.order("position ASC").each do |tl| %>
  <h2><%= link_to tl.name,tl %></h2>
  <div class="grid">  
    <% tl.titles.order('rand()').limit(3).each do |t| %>
    <%= render :partial=>'titles/gridtitle', :locals => {:title=>t,:text=>""}%>
    <% end %>
    <%= link_to "More like this...",tl,{:class=>"listmore"} %>
  </div>
<hr style="clear:both;">
  <% end %>
</div>
<div class="span2">
  <h2>The Books Blog</h2>
  <% PostCategory.find_by_name("Books").posts.where(:published=>true).order("created_at DESC").limit(5).each do |post| %>
  
  <h2 class="posttitle"><%= link_to post.title,post %></h2>
  <h3><%= post.created_at.to_formatted_s(:long_date) %></h3>
  <% post.images.limit(1).each do |i| %>
  <div class="item">
    <%= image_tag i.the_image_url(:reasonable),{:width => "100%"} %>
  </div>  
  <% end %>
  <div class="introduction">
    <%= raw post.introduction %>
  </div>
  <%= link_to "Read more...",post %>
  <hr style="clear:both;">
  <% end %>


</div>



</div>
