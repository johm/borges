<% content_for :title do %>
Events at 2640
<% end %>

<div class="container-fluid">
<div class="row spaceontop">
  <div class="col-xs-6 col-sm-8">
    <h1 class="headername">The 2640 Project</h1>
  </div>
  <div class="col-xs-6 col-sm-4">
    <div class="metafloat" style="float:right;">
      <div class="postedin">
	2640 St. Paul St. <br />
	Baltimore, MD
	<ul>
     	  <li><a href="/pages/what-is-2640">What is 2640?</a> </li>
     	  <li><a href="/pages/propose-an-event-2640">How do I book an event at 2640?</a> </li>

	</ul>
      </div>
      </div>
  </div>
</div>
<hr />


<div class="span4">
  <h3>Your questions, answered:</h3>
  <ul class="bookfaq">
    This new site for 2640 is under construction!  To get in touch with 2640 while we build it out, email us at 2640@redemmas.org.  For updates on our upcoming events, head over to our <a href="https://www.facebook.com/twentysixforty">Facebook page</a>.
  </ul>
</div>

</div>
<hr>
<div class="row" >
  <div class="span8">
    <h1>Events for <%= Date::MONTHNAMES[@month] %> <%= @year %></h1>
    <h5><%= link_to "« #{Date::MONTHNAMES[previous_month(@month,@year)]}", :month=>previous_month(@month,@year),:year=>previous_year(@month,@year) %> | <%= link_to "#{Date::MONTHNAMES[next_month(@month,@year)]} »", :month=>next_month(@month,@year),:year=>next_year(@month,@year) %></h5>
    <% @events.each do |event| %>
    <%= render event %>
    <hr style="clear:right;">
    <% end %>
  </div>
  <div class="span4 blogcolumn">
  <h2>2640 Blog</h2>

  <% begin %>
  <% PostCategory.find_by_name("2640").posts.where(:published=>true).order("created_at DESC").limit(5).each do |post| %>
  <h3 class="postdate"><%= post.created_at.to_formatted_s(:long_date) %></h3>
    <h2 class="posttitle"><%= link_to post.title,post %></h2>

  <% post.images.limit(1).each do |i| %>
  <div class="item">
    <%= image_tag i.the_image_url(:reasonable),{:class=>'blogbarimage'} %>
  </div>  
  <% end %>
  <div class="introduction">
    <%= raw post.introduction %>
  </div>
  <%= link_to "Read more...",post %>
  <hr style="clear:both;">
  <% end %>
  <% rescue %>
  No posts
  <% end %>

</div>



</div>


