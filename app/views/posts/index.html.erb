
    <div class="span7">
       <h1>News and Updates</h1>
    </div>
    <div class="span3">
      <%=  mylinkbutton "<i class='icon-plus'></i> New Post", new_post_path  if can? :create, Post %>
    </div>
  </div>

  

    <% @posts.each do |post| %>
    <div class="row">

      <div class="span2">
	<% post.images.each do |i| %>
	<div class="item">
	  <%= image_tag i.the_image_url(:reasonable),{:width => "100%"} %>
	</div>  
	<% end %>

      </div>
      <div class="span7 postshort">
	<h3 class="postdate"><%= post.created_at.to_formatted_s(:long_date) %></h3>
	<h2 class="posttitle"><%= link_to post.title,post %></h2>
	<div class="introduction">
	  <%= raw post.introduction %>
	</div>
	<%= link_to "Read more...",post %>
	<div style="float:right;">Posted in <%= post.post_categories.collect{|cat|  link_to cat.name,cat}.join(", ").html_safe %></div> 
	<hr style="clear:both;">
      </div>
      <div class="span3">
      </div>
    </div>
  <% end %>
  
  <%= paginate @posts %>
</div>

