
<hr />
<h1>Listing Returns</h1>

<%= mylinkbutton 'New Return', new_return_order_path %>

<table class="table">
  <tr>
    <th><%= sortable "created_at", "Created" %> </th>
    <th><%= sortable "number", "Number" %></th>
    <th><%= sortable "distributors.name", "Distributor" %></th>
    <th>Total</th>
    <th><%= sortable "posted_when", "Posted When" %></th>
  </tr>

<% @return_orders.each do |return_order| %>
  <tr>
    <td><%= return_order.created_at.to_formatted_s(:just_date) %></td>
    <td><%= link_to return_order.id, return_order %></td>
    <td><%= link_to return_order.distributor.name, return_order.distributor unless return_order.distributor.nil? %></td>
    <td><%= return_order.total %></td>
    <td><%= return_order.posted? ? "#{return_order.posted_when.to_formatted_s(:just_date)}" : "No"  %></td>
  </tr>
<% end %>
</table>


